{% extends "admin/layouts.njk" %}

{% block content %}

    <main class="admin-main input delete-area">

        <form method="POST" action="/admin/chefs?_method=DELETE" id="delete-form">
            <input type="hidden" name="id" value="{{chef.id}}">
            <input type="hidden" name="total_recipes" value="{{chef.total_recipes}}">
        </form>
        <form method="POST" action="/admin/chefs?_method=PUT" class="recipe-form" enctype="multipart/form-data">

            <div>
                <h1>Editando chef</h1>
                
                <div class="form-buttons">
                    <button type="submit" class="form-button red-background" form="delete-form">Deletar</button>
                    <button type="submit" class="form-button purple-background">Salvar chef</button>
                </div>
            </div>

            {% include "admin/chefs/fields.njk" %}

            <input type="hidden" name="id" value="{{chef.id}}">

        </form>
        
    </main>

    {% include "admin/confirm.njk" %}

{% endblock %}
